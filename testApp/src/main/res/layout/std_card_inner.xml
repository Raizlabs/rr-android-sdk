<android.support.v7.widget.CardView
    android:id="@+id/global_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:layout_centerInParent="true"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="11dp"
    >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/image_content"
            android:layout_width="fill_parent"
            android:layout_height="320dp"
            android:layout_alignWithParentIfMissing="true"
            android:background="@android:color/white"
            android:scaleType="centerCrop"
            tools:src="@drawable/picture1"
            />

        <TextView
            android:id="@+id/title"
            style="@android:style/TextAppearance.Large.Inverse"
            android:layout_below="@id/image_content"
            android:layout_height="40dp"
            android:layout_width="220dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/rr_text_color_primary"
            android:textSize="16sp"
            android:fontFamily="roboto"
            android:ellipsize="end"
            android:lines="1"
            android:background="@color/rr_bg_dark"
            tools:text="Title"
            android:gravity="bottom|left" />

        <TextView
            android:id="@+id/brand"
            style="@android:style/TextAppearance.Large.Inverse"
            android:layout_below="@id/title"
            android:layout_height="40dp"
            android:layout_width="220dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/rr_text_color_secondary"
            android:textSize="16sp"
            android:fontFamily="roboto"
            android:ellipsize="end"
            android:lines="1"
            android:background="@color/rr_bg_dark"
            tools:text="Brand"
            android:gravity="top|left"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/rr_red"
            android:textColor="@android:color/white"
            tools:text="$0.00"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
